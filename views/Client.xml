<odoo>
    <data>
        <record id="client_list_action" model="ir.actions.act_window">
            <field name="name">Client </field>
            <field name="res_model">gctjara.client</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
            <!-- <field
                eval="{'search_default_filter': 1,'search_default_by_responsible': 1}" name="context"/> -->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créer votre première Client</p>
            </field>
        </record>
        <record id="client_form_view" model="ir.ui.view">
            <field name="name">client.form</field>
            <field name="model">gctjara.client</field>
            <field name="arch" type="xml">
                <form string="Clients">
                    <sheet>

                            <group >
                                <field class="oe_left oe_avatar"
                                    name="image" widget="image"/>
                             <field name="name"/>
                             </group>
                            <group col="2">
                               <group string="Informations générales">
                                <field name="company_name"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="fax"/>
                                <field name="mobile"/>
                            </group>
                            <group string="Coordonées">
                                <field name="adresse"/>
                                <field name="street"/>
                                <field name="zip"/>
                                <field name="city"/>
                                <field name="active"/>
                            </group>
                           </group>

                        <notebook>
                            <!-- <page class="oe_page_Title" string="Produits">
                                <group>
                                    <field name="produits_id">
                                        <tree>
                                            <field String="Produit" name="name"/>
                                        </tree>
                                    </field>
                                </group>
                            </page> -->
                            <!--    <page class="oe_page_Title" string="Factures">
                            <group>
                                <field name="facture_id">
                                    <tree>
                                    <field String="N° Factures" name="numero"/>
                                    </tree>
                                </field>
                            </group>
                        </page>-->
                            <page class="oe_page_Title" string="Commandes">
                                <group>
                                    <field name="commande_id">
                                    <tree>
                                    <field String="Numéro" name="numerocmdc"/>

                                    </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="client_tree_view" model="ir.ui.view">
            <field name="name">client.tree</field>
            <field name="model">gctjara.client</field>
            <field name="arch" type="xml">
                <tree string="Client">
                    <field name="company_name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

          <record model="ir.ui.view" id="client_kanban_view">
            <field name="name">client.kanban</field>
            <field name="model">gctjara.client</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="company_name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </kanban>
            </field>
        </record>

        <record id="client_kanban_view" model="ir.ui.view">
            <field name="name">client.kanban</field>
            <field name="model">gctjara.client</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <field name="name"/>
                                <field name="company_name"/>
                                <field name="email"/>
                                <field name="phone"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>