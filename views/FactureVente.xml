<odoo>
    <data>
        <record id="facturevente_form_view" model="ir.ui.view">
            <field name="name">facturevente.form</field>
            <field name="model">gctjara.facturevente</field>
            <field name="arch" type="xml">
                <form string="Facture Form">
                    
                    <sheet>
                        <group string="Informations générales">
                            <field name="numero"/>
                            <field name="datefact"/>
                            <field name="datepayfact"/>
                            <field name="valid"/>

                            
                        </group>
                        <group string="Références">
                            <field name="client_id"/>
                            <field name="bonlivraison_id"/>
                            <field name="etatreglement" />
                            <field name="refregvente" />
                        </group> 
                        <notebook>
                          <page class="oe_page_Title" string="Produits">
                                <group>
                                    <field name="lignefact_id">
                                   
                                    <tree editable="bottom">
                                        <field name="embalageproduit_id"/>
                                        <field name="prixvente"/>
                                        <field name="quantite"/>
                                        <field name="prix_ht" />
                                        <field name="tva"/>
                                        <field name="prix_total"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="embalageproduit_id"/>
                                        </group>
                                    </form>
                                    </field>
                                </group>
                                <group class="oe_subtotal_footer">
                                    <label
                                    class="oe_subtotal_footer_separator" string="Montant"/>
                                    <field name="montant" nolabel="1"/>
                                    <newline/>
                                    <field name="timbre" nolabel="0"/>
                                    <label
                                    class="oe_subtotal_footer_separator" string="Montant TTC"/>
                                    <field name="montantttc" nolabel="1"/>
                                </group>
                            </page>
                            <page class="oe_page_Title" string="Attachement">
                                <group>
                                    <field name="attachment">
                                    <tree>
                                    <field name="name"/>
                                    <field name="datas_fname"/>
                                    <field name="mimetype"/>
                                    <field name="create_date"/>
                                    </tree>
                                    </field>
                                </group>
                            </page>
                            <page class="oe_page_Title" string="Description">
                                <group>
                                    <field name="description"/>
                                </group>
                            </page>
                        </notebook>
                    
                        <div class="oe_read_only">
                            <Label for="create_uid" string="Facture crée par :"/>
                            <field name="create_uid"/>
                        </div>
                        
                    </sheet>
                </form>
            </field>
        </record>
        <record id="facturevente_tree_view" model="ir.ui.view">
            <field name="name">facturevente.tree</field>
            <field name="model">gctjara.facturevente</field>
            <field name="arch" type="xml">
                <tree string="Factures ">
                    <field name="numero"/>
                    <field name="datefact"/>
                    <field name="client_id"/>
                    <field name="bonlivraison_id"/>
                    <field name="etatreglement" />
                    <field name="refregvente"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>
         <record model="ir.ui.view" id="facturevente_calendar_view">
            <field name="name">facturevente.calendar</field>
            <field name="model">gctjara.facturevente</field>
            <field name="arch" type="xml">
                <calendar string="Calendier facture vente" date_start="datefact" color="client_id">
                    <field name="numero" />
                    <field name="etatreglement" />
                </calendar>
            </field>
        </record>
         <record model="ir.ui.view" id="facturevente_graph_view">
            <field name="name">facturevente.graph</field>
            <field name="model">gctjara.facturevente</field>
            <field name="arch" type="xml">
                <graph string="Participations by Courses">
                    <field name="client_id" />
                    <field name="montantttc" type="measure" />
                </graph>
            </field>
        </record>
        <record id="facturevente_list_action" model="ir.actions.act_window">
            <field name="name">Factures Ventes</field>
            <field name="res_model">gctjara.facturevente</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créer votre première facture</p>
            </field>
        </record>
          <act_window id="action_group" 
                    key2="client_action_multi"
                    name="Payment"    
                    res_model="gctjara.factureventeregle"
                    src_model="gctjara.facturevente" 
                    target="new" 
                    view_mode="form"
                    />
                    
        <record id="factureventeregle_form_view" model="ir.ui.view">
            <field name="name">factureventeregle.form</field>
            <field name="model">gctjara.factureventeregle</field>
            <field name="arch" type="xml">
                <form string="Payment facture vente">
                    
                    <group col="2">
                        <group >
                            <field name="datereception"/>
                            <field name="datevaleur"/>
                            <field name="dateoperation"/>
                            <field name="dateecheance"/>
                        </group>
                        <group>
                            <field name="modepayment"/>
                            <field name="etatrapp"  options="{'vertical': true}" widget="radio"/>
                            <field name="numerochq"  attrs="{'invisible': [('modepayment','!=','ch'),('modepayment','!=','tr')]}"/>
                        </group>
                    </group>
                   
                    <footer>
                        <button class="oe_highlight" name="Paiement"
                            string="Créer règlement" type="object"/> 
                        <button class="oe_link" special="cancel" string="Annuler"/>
                    </footer>
                </form>
            </field>
        </record>
      
    </data>
</odoo>