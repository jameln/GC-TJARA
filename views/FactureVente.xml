<odoo>
    <data>

        <record model="ir.actions.act_window" id="facturevente_list_action">
            <field name="name">Factures Ventes</field>
            <field name="res_model">gctjara.facturevente</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context"
                eval="{'search_default_filter': 1,'search_default_by_responsible': 1}" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créer votre première facture</p>
            </field>
        </record>

        

        <record model="ir.ui.view" id="facturevente_form_view">
            <field name="name">factureVente.form</field>
            <field name="model">gctjara.facturevente</field>
            <field name="arch" type="xml">
                <form string="Facture Form">
                    
                    <sheet>
                        <group>
                            <field name="numero" />
                            <field name="dateFact" />
                            <field name="valid" />
                            <field name="description" />
                            <field name="valid" />
                            <field name="lignes_id" />
                            <field name="state" />
                            <field name="lignereglementvente_id" />
                            <field name="client_id" />
                            <field name="commande_id" />
                        </group>
                            
                        <notebook>
                        <page string="Produits" class="oe_page_Title">
                                <group>
                                    
                                    <field name="lignes_id">
                                        <tree >
                                            <field name="produit" string="Produit" />
                                            <field name="quantite" string="Qte" />
                                            <field name="prix_total" string="Prix Total" />
                                        </tree>
                                        <!--<form> <field name="quantite" string="Qte"/> </form> -->
                                    </field>
                                </group>
                                <group class="oe_subtotal_footer">
                                    <label string="Total HT" />
                                    <newline />
                                    <label string="Total TVA" />
                                    <newline />
                                    <label string="Total TTC" class="oe_subtotal_footer_separator" />
                                    <field name="total" nolabel=""/>
                                    <newline />
                                    <label string="Timbre" style="margin-top: 10px" />
                                    <newline />
                                </group>
                            </page>
                            <page string="Attachement" class="oe_page_Title">
                                <group>
                                    <field name="attachment">
                                        <tree>
                                           <field name="name" />
                                           <field name="datas_fname" />
                                           <field name="mimetype" />
                                           <field name="create_date" />
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                        <div class="oe_read_only">
                            <Label string="Facture crée par :" for="create_uid" />
                            <field name="create_uid" />
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="facturevente_tree_view">
            <field name="name">factureVente.tree</field>
            <field name="model">gctjara.facturevente</field>
            <field name="arch" type="xml">
                <tree string="Facture Form" >
                     <field name="numero" />
                     <field name="dateFact" />
                     <field name="valid" />
                    <field name="description" />
                    <field name="valid" />
                    <field name="lignes_id" />
                    <field name="state" />
                    <field name="lignereglementvente_id" />
                    <field name="client_id" />
                    <field name="commande_id" />
                    <field name="create_uid" />
                    
                </tree>
            </field>

        </record>

    </data>
</odoo>