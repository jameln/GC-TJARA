<odoo>
    <data>
        <record id="facturevente_calendar_action" model="ir.actions.act_window">
            <field name="name">Factures Ventes</field>
            <field name="res_model">gctjara.facturevente</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar</field>
        </record>
        <record id="factureachat_calendar_action" model="ir.actions.act_window">
            <field name="name">Factures Achats</field>
            <field name="res_model">gctjara.factureachat</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar</field>
        </record>
        <record id="produits_graph_action" model="ir.actions.act_window">
            <field name="name">Produits</field>
            <field name="res_model">gctjara.produits</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph</field>
        </record>
        <record id="board_gctjara_form" model="ir.ui.view">
            <field name="name">Dashboard Form</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="GC-TJARA Dashboard">
                    <board style="2-1">
                        <column>
                            <action name="%(produits_graph_view)d" string="Qté par produit"/>
                            <action name="%(factureachat_list_action)d" string="Factures Achats"/>
                        </column>
                        <column>
                            <action name="%(produits_graph_view)d" string="Qté par produit"/>
                            <action name="%(facturevente_list_action)d" string="Factures Ventes"/>
                        </column>
                        <column>
                            <action
                                name="%(facturevente_calendar_action)d" string="Calendrier"/>
                            <action
                                name="%(factureachat_calendar_action)d" string="Ventes"/>
                        </column>
                    </board>
                </form>
            </field>
        </record>
        <record id="open_board_tjara" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="board_gctjara_form"/>
        </record>
    </data>
</odoo>
