<odoo>
    <data>
        <record id="factureachat_list_action" model="ir.actions.act_window">
            <field name="name">Factures Achats</field>
            <field name="res_model">gctjara.factureachat</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créer votre première facture</p>
            </field>
        </record>
        <act_window id="action_group" 
                    key2="client_action_multi"
                    name="Payment"    
                    res_model="gctjara.factureachatregle"
                    src_model="gctjara.factureachat" 
                    target="new" 
                    view_mode="form"
                    />
                    
        <record id="factureachatregle_form_view" model="ir.ui.view">
            <field name="name">factureachatregle.form</field>
            <field name="model">gctjara.factureachatregle</field>
            <field name="arch" type="xml">
                <form string="Payment facture achat">
                    
                    <group col="2">
                        <group >
                            <field name="datereception"/>

                            <field name="dateoperation"/>
                            <field name="dateecheance"/>
                        </group>
                        <group>
                            <field name="modepayment"/>
                            <field name="etatrapp" options="{'vertical': true}" widget="radio"/>
                           
                        </group>
                    </group>
                   
                    <footer>
                        <button class="oe_highlight" name="Payment"
                            string="Crée règlement" type="object"/>
                        <button class="oe_link" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="factureachat_form_view" model="ir.ui.view">
            <field name="name">factureachat.form</field>
            <field name="model">gctjara.factureachat</field>
            <field name="arch" type="xml">
                <form string="Facture Form">
                    <sheet>
                        <group>
                            <field name="numero"/>
                            <field name="datefact"/>
                            <field name="datepayfact"/>
                            <field name="valid"/>
                            <field name="fournisseur_id"/>
                            <field name="etatreglement"/>
                            
                        </group>
                        <notebook>
                            <page class="oe_page_Title" string="Produits">
                                <group>
                                    <field name="lignefact_id">
                                    <!--   <field name="lignecmd_id"> -->
                                    <tree editable="bottom">
	                                    <field name="embalageproduit_id"/>
	                                    <field name="prixunit"/>
	                                    <field name="quantite"/>
	                                    <field name="tva"/>
	                                    <field name="prix_total"/>
                                    </tree>
                                    <form>
	                                    <group>
	                                    	<field name="embalageproduit_id"/>
	                                    </group>
                                    </form>
                                    </field>
                                </group>
                                <group class="oe_subtotal_footer">
                                    <label
                                    class="oe_subtotal_footer_separator" string="Montant"/>
                                    <field name="montant" nolabel="1"/>
                                    <newline/>
                                    <field name="timbre" nolabel="0"/>
                                    <label
                                    class="oe_subtotal_footer_separator" string="Montant TTC"/>
                                    <field name="montantttc" nolabel="1"/>
                                </group>
                            </page>
                            <page class="oe_page_Title" string="Attachement">
                                <group>
                                    <field name="attachment">
                                    <tree>
                                    <field name="name"/>
                                    <field name="datas_fname"/>
                                    <field name="mimetype"/>
                                    <field name="create_date"/>
                                    </tree>
                                    </field>
                                </group>
                            </page>
                            <page>
                                <group>
                                    <field name="description"/>
                                </group>
                            </page>
                        </notebook>
                        
                   
                        <p>
                            <strong>ARRETEE LE PRESENT FACTURE D'ACHAT A LA SOMME DE:</strong>
                             <field name="amount_to_text"/>
                          
                        </p>
                    
                        <div class="oe_read_only">
                            <Label for="create_uid" string="Facture crée par :"/>
                            <field name="create_uid"/>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        
        <record model="ir.ui.view" id="facture_graph_view">
            <field name="name">factureachat.graph</field>
            <field name="model">gctjara.factureachat</field>
            <field name="arch" type="xml">
                <graph string="Participations by Courses">
                    <field name="fournisseur_id" />
                    <field name="montantttc" type="measure" />
                </graph>
            </field>
        </record>
        
        <record id="facture_tree_view" model="ir.ui.view">
            <field name="name">factureachat.tree</field>
            <field name="model">gctjara.factureachat</field>
            <field name="arch" type="xml">
                <tree string="Factures ">
                    <field name="numero"/>
                    <field name="datefact"/>
                    <field name="datepayfact"/>
                    <field name="valid"/>
                    <field name="etatreglement"/>
                    <field name="montant" sum="True"/>
                    <field name="montantttc" sum="True"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
