<odoo>
    <data>
        <record id="factureachat_list_action" model="ir.actions.act_window">
            <field name="name">Factures Achats</field>
            <field name="res_model">gctjara.factureachat</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créer votre première facture</p>
            </field>
        </record>
        <record id="factureachat_form_view" model="ir.ui.view">
            <field name="name">factureachat.form</field>
            <field name="model">gctjara.factureachat</field>
            <field name="arch" type="xml">
                <form string="Facture Form">
                    <header string="Facture">
                        <!--<button string="Valider la facture test" type="object" name="afficher" 
                            confirm="Etes vous sur?"/> -->
                        <button class="oe_highlight"
                            name="fctachat_brouillon" states="an"
                            string="Retour pour correction" type="object"/>
                        <button class="oe_highlight" name="fctachat_valider"
                            states="br" string="Valider la facture" type="object"/>
                        <button class="oe_highlight" name="fctachat_annuler"
                            states="br" string="Annuler la facture" type="object"/>
                        <button class="oe_highlight" name="fctachat_payer"
                            states="va"
                            string="Marquer facture comme payee" type="object"/>
                        <field name="state"
                            statusbar_colors="{'br':'white','va':'blue','an':'red','pa':'green'}"
                            statusbar_visible="br,va,pa,an" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="numero"/>
                            <field name="datefact"/>
                            <field name="datepayfact"/>
                            <field name="valid"/>
                            <field name="description"/>
                            <!--  <field name="lignes_id"/> -->
                            <!-- <field name="lignereglementachat_id"/>
                            <field name="fournisseur_id"/>
                            <field name="commande_id"/> -->
                        </group>
                        <notebook>
                            <!--    <page class="oe_page_Title" string="Produits">
                                <group>
                                    <field name="lignes_id">
                                    <tree>
                                    <field name="produit" string="Produit"/>
                                    <field name="quantite" string="Qte"/>
                                    <field name="prix_total" string="Prix Total"/>
                                    </tree>
                                    <form> <field name="quantite" string="Qte"/> </form>
                                    </field>
                                </group>
                                <group class="oe_subtotal_footer">
                                    <label string="Total HT"/>
                                    <newline/>
                                    <label string="Total TVA"/>
                                    <newline/>
                                    <label
                                    class="oe_subtotal_footer_separator" string="Total TTC"/>
                                    <field name="total" nolabel=""/>
                                    <newline/>
                                    <label string="Timbre" style="margin-top: 10px"/>
                                    <newline/>
                                </group>
                            </page>-->
                            <page class="oe_page_Title" string="Attachement">
                                <group>
                                    <field name="attachment">
                                    <tree>
                                    <field name="name"/>
                                    <field name="datas_fname"/>
                                    <field name="mimetype"/>
                                    <field name="create_date"/>
                                    </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                        <div class="oe_read_only">
                            <Label for="create_uid" string="Facture crée par :"/>
                            <field name="create_uid"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="facture_tree_view" model="ir.ui.view">
            <field name="name">factureachat.tree</field>
            <field name="model">gctjara.factureachat</field>
            <field name="arch" type="xml">
                <tree string="Factures ">
                    <field name="numero"/>
                    <field name="datefact"/>
                    <field name="datepayfact"/>
                    <field name="valid"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <!-- WorkFlow-->
        <record id="validation_workflow" model="workflow">
            <field name="name">gctjara.workflow_validation_facture_achat</field>
            <field name="osv">gctjara.factureachat</field>
            <field name="on_create">True</field>
        </record>
        <record id="activity_depart" model="workflow.activity">
            <field name="wkf_id" ref="validation_workflow"/>
            <field name="flow_start">True</field>
            <field name="name">brouillon</field>
            <field name="kind">function</field>
            <field name="action">fctachat_brouillon()</field>
        </record>
        <record id="activity_valide" model="workflow.activity">
            <field name="wkf_id" ref="validation_workflow"/>
            <field name="name">validee</field>
            <field name="kind">function</field>
            <field name="action">fctachat_valider()</field>
        </record>
        <record id="activity_paye" model="workflow.activity">
            <field name="wkf_id" ref="validation_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">payee</field>
            <field name="kind">function</field>
            <field name="action">fctachat_payer()</field>
        </record>
        <record id="activity_annule" model="workflow.activity">
            <field name="wkf_id" ref="validation_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">annulee</field>
            <field name="kind">function</field>
            <field name="action">fctachat_annuler()</field>
        </record>
        <record id="trans_br_va" model="workflow.transition">
            <field name="act_from" ref="activity_depart"/>
            <field name="act_to" ref="activity_valide"/>
            <field name="signal">fctachat_valider</field>
        </record>
        <record id="trans_va_pa" model="workflow.transition">
            <field name="act_from" ref="activity_valide"/>
            <field name="act_to" ref="activity_paye"/>
            <field name="signal">fctachat_payer</field>
        </record>
        <record id="trans_br_an" model="workflow.transition">
            <field name="act_from" ref="activity_depart"/>
            <field name="act_to" ref="activity_annule"/>
            <field name="signal">fctachat_annuler</field>
        </record>
        <record id="trans_an_br" model="workflow.transition">
            <field name="act_from" ref="activity_annule"/>
            <field name="act_to" ref="activity_depart"/>
            <field name="signal">fctachat_brouillon</field>
        </record>
        <!--end workflow -->
    </data>
</odoo>
