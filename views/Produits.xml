<odoo>
    <data>
        <record id="produits_list_action" model="ir.actions.act_window">
            <field name="name">Produits </field>
            <field name="res_model">gctjara.produits</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
           
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créer votre première produits</p>
            </field>
        </record>
        <record id="produits_form_view" model="ir.ui.view">
            <field name="name">produits.form</field>
            <field name="model">gctjara.produits</field>
            <field name="arch" type="xml">
                <form string="Produits Form">
                <header string="Facture">
                       
                        <button class="oe_highlight" name="create_produitemballee" attrs="{'invisible':[('states','=','enable')]}"
                            string="Ajouter Prouit emballée" type="object"  states=""/>
                       
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="dateexpiration"/>
                            <field name="prixachat"/>
                            <field name="prixvente"/>
                            <field name="quantite"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="states" />
                        </group>
                    </sheet>
                     <notebook>
                      <!--  <page class="oe_page_Title" string="Fournisseur">
                            <group>
                                <field name="fournisseur_id">
                                    <tree>
                                    <field name="name" string="Fournisseur"/>
                                    <field name="matriculefiscal" string="Matricule"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page class="oe_page_Title" string="Clients">
                            <group>
                                <field name="clients_id">
                                    <tree>
                                    <field String="Client" name="name"/>
                                    <field String="Company" name="company_name"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page class="oe_page_Title" string="Stock">
                            <group>
                                <field name="stock_id">
                                    <tree>
                                    <field String="Stock" name="name"/>
                                    </tree>
                                </field>
                            </group>
                        </page>-->
                        <page class="oe_page_Title" string="Emballages">
                            <group>
                                <field name="produitemballee_id">
                                    <tree>
                                    
                                        <field String="Quantité" name="quantite"/>
                                        <field String="Prix" name="prix_total"/>
                                        
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook> 
                </form>
            </field>
        </record>
        <record id="produits_graph_view" model="ir.ui.view">
            <field name="name">produits.graph</field>
            <field name="model">gctjara.produits</field>
            <field name="arch" type="xml">
                <graph string="QteProdPart">
                    <field name="name"/>
                    <field name="quantite"/>
                </graph>
            </field>
        </record>
        <record id="produits_tree_view" model="ir.ui.view">
            <field name="name">produits.tree</field>
            <field name="model">gctjara.produits</field>
            <field name="arch" type="xml">
                <tree string="Poduits">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="dateexpiration"/>
                    <field name="quantite"/>
                </tree>
            </field>
        </record>
       
    </data>
</odoo>
