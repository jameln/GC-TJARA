<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_cmdfournisseur">
            <t t-call="report.html_container">
                <t t-as="o" t-foreach="docs">
                    <t t-call="report.external_layout">
                        <div class="page">
                          
                            <h3>Commande achats N° <span t-field="o.numero"/></h3>
                          <div class="col-xs-6 pull-left">  
                           <p >
                           Crée le      : <span t-field="o.datecommande"/><br/>
                           Fournisseur  :  <span t-field="o.fournisseur_id"/><br/>
                           </p>
                          </div>
                            
                                <table class="table table-condensed"  >
                                        <thead style="border:solid 2px; border-color:#0C6592" >
                                            <tr>
                                                
                                                <th class="text-left">Produits</th>
                                                 <th class="text-left">Prix unitaire</th>
                                                <th class="text-left">Quantité</th>
                                                <th class="text-left">Quantité Total </th>
                                                <th class="text-left">Prix HT</th>
                                                <th class="text-left">TVA</th>
                                               
                                                <th class="text-left"  >Total Price</th>
                                                
                                            </tr>
                                            </thead>
                                            <tbody style="border:solid 2px; border-color:#0C6592">
                                                <t t-foreach="o.lignecmd_id" t-as="page">
                                                <tr>
                                                   <td> <t t-esc="page.embalageproduit_id.name"/> </td> 
                                                   <td> <t t-esc="page.prixunit"/> </td> 
                                                   <td> <t t-esc="page.quantite"/> </td>
                                                    <td> <t t-esc="page.quantitetot"/> </td>
                                                   <td> <t t-esc="page.prix_ht"/> </td>
                                                   <td> <t t-esc="page.tva"/> </td> 
                                                   <td> <t t-esc="page.prix_total"/> </td> 
                                                </tr>
                                                </t>
                                         </tbody>
                                </table> 
                                
                            
                        <div class="row" name="total">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed" style="border:solid 2px; border-color:#0C6592">
                                    <tr class="border-black">
                                        <td><strong>Montant</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.montant_ht"/>
                                            </td>
                                            <br/>
                                    </tr>
                               
                            
                                 
                               
                                    <tr class="border-black">         
                                            <td><strong>Montant TTC</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.montant"/>

                                            </td>
                                            <br/>
                                    </tr>
                                </table>
                            </div>
                         </div>
                           </div>
                     </t>
                       
                </t>
            </t>
        </template>
    </data>
</odoo>
