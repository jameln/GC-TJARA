<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_facturevente">
            <t t-call="report.html_container">
                <t t-as="o" t-foreach="docs">
                    <t t-call="report.external_layout">
                        <div class="page">
                          
                            <h3>FACTURE DE VENTE N° <span t-field="o.numero"/></h3>
                            
                           <p>Crée le      : <span t-field="o.datefact"/><br/>
                           Client  :  <span t-field="o.client_id"/><br/>
                           Réf BLs : <span t-field="o.bonlivraison_id"/></p>
                          
                            
                                <table class="table table-condensed">
                                        <thead>
                                            <tr>
                                                
                                                <th class="text-left">Produits</th>
                                                <th class="text-left">Quantité</th>
                                                <th class="text-left">TVA</th>
                                                <th class="text-left">Prix unitaire</th>
                                                <th class="text-left">Prix totale</th>
                                                
                                            </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="o.lignefact_id" t-as="page">
                                                <tr>
                                                   <td> <t t-esc="page.embalageproduit_id.name"/> </td> 
                                                   <td> <t t-esc="page.quantite"/> </td> 
                                                   <td> <t t-esc="page.tva"/> </td> 
                                                   <td> <t t-esc="page.prixvente"/> </td> 
                                                   <td> <t t-esc="page.prix_total"/> </td> 
                                                </tr>
                                                </t>
                                         </tbody>
                                </table> 
                                
                            
                        <div class="row" name="total">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <tr class="border-black">
                                        <td><strong>Montant</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.montant"/>
                                            </td>
                                            <br/>
                                    </tr>
                               
                               
                                    <tr class="border-black">          
                                            <td><strong>Timbre</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.timbre"/>
                                            </td>
                                            <br/>
                                     </tr>
                                 
                               
                                    <tr class="border-black">         
                                            <td><strong>Montant TTC</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.montantttc"/>
<!--                                                <span t-field="o.montantttc" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/> -->

                                            </td>
                                            <br/>
                                    </tr>
                                </table>
                            </div>
                         </div>                           
                        </div>
                        
                     </t>
                       <!-- <p>
                            <strong>ARRETEE LE PRESENT DEVIS/COMMANDE A LA SOMME DE:</strong><br/>
                            <span t-field="o.amount_to_text"/>
                            
                          
                        </p> -->
                </t>
            </t>
        </template>
    </data>
</odoo>
